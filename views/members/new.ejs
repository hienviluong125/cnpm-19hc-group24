<div class="row mt-2">
  <div class="col-12">
    <div class="card">
      <div class="card-body">
        <h4 class="header-title">Create an member account</h4>
        <%- include('./../shared/errors', { errors: errors}) %>
        <div class="row">
          <div class="col-lg-6">
            <form method="POST" action="/members">
              <div class="form-group mb-3">
                <label for="username">Username</label>
                <input name="username" type="text" id="username" class="form-control" value="<%= username %>">
              </div>

              <div class="form-group mb-3">
                <label for="first_name">First name</label>
                <input name="first_name" type="text" id="first_name" class="form-control" value="<%= first_name %>">
              </div>

              <div class="form-group mb-3">
                <label for="last_name">Last name</label>
                <input name="last_name" type="text" id="last_name" class="form-control" value="<%= last_name %>">
              </div>

              <div class="form-group mb-3">
                <label for="example-email">Email</label>
                <input name="email" type="email" id="example-email" name="example-email" class="form-control"
                  placeholder="Email" value="<%= email %>">
              </div>

              <div class="form-group mb-3">
                <label for="example-select">Gender</label>
                <select name="gender" class="form-control" id="example-select">
                  <option <%= gender === 'male' ? 'selected' : '' %> value="male">Male</option>
                  <option <%= gender === 'female' ? 'selected' : '' %> value="female">Female</option>
                </select>
              </div>

              <div class="form-group mb-3">
                <label for="phone">Phone</label>
                <input name="phone" type="text" id="phone" class="form-control" value="<%= phone %>">
              </div>

              <div class="form-group mb-3">
                <label for="address">Address</label>
                <input name="address" type="text" id="address" class="form-control" value="<%= address %>">
              </div>

              <div class="form-group mb-3">
                <label for="example-password">Password</label>
                <input name="password" type="password" id="example-password" class="form-control">
              </div>

              <input name="role" type="hidden" value="member" class="form-control d-none">

              <div class="form-group mb-3">
                <button class="btn btn-success">Submit</button>
              </div>
            </form>
          </div> <!-- end col -->
        </div>
        <!-- end row-->
      </div> <!-- end card-body -->
    </div> <!-- end card -->
  </div><!-- end col -->
</div>

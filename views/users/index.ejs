<div class="row mt-2">
  <div class="col-xl-12">
    <div class="card">
      <div class="card-body">
        <%- include('./../shared/flash-message', { messages: messages }) %>
        <h4 class="header-title">User management</h4>
        <a href="/users/new" class="btn btn-primary mb-2">Add an user</a>
        <div class="table-responsive-sm">
          <table class="table table-centered mb-0">
            <thead>
              <tr>
                <th>Username</th>
                <th>Email</th>
                <th>First name</th>
                <th>Last name</th>
                <th>Gender</th>
                <th>Role</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% users.forEach(function(user){ %>
              <tr>
                <td><%= user.username %></td>
                <td><%= user.email %></td>
                <td><%= user.first_name %></td>
                <td><%= user.last_name %></td>
                <td><%= user.gender %></td>
                <td><%= user.role %></td>
                <td>
                  <a href="users/<%= user.id %>/edit" class="btn btn-info">Edit</a>
                  <a href="users/<%= user.id %>/delete" class="confirm-dialog btn btn-danger">Delete</a>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
          <%- include('./../shared/pagination', { resource, resourcePagy }) %>
        </div> <!-- end table-responsive-->

      </div> <!-- end card body-->
    </div> <!-- end card -->
  </div><!-- end col-->
</div>

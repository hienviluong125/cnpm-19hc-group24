<div class="row mt-2">
  <div class="col-12">
    <div class="card">
      <div class="card-body">
        <h4 class="header-title">Add new workshift for staff</h4>
        <%- include('./../shared/errors', { errors: errors}) %>
        <div class="row">
          <div class="col-lg-6">
            <form method="POST" action="/workshifts">

              <div class="form-group mb-3">
                <label>Choose user</label>
                <select name="user_id" class="form-control select2" data-toggle="select2">
                  <option <%= user_id == '' ? 'selected': '' %>  disabled value="">Select user</option>
                  <% users.forEach(function(user){ %>
                    <option <%= user_id == user.id ? 'selected' : '' %> value="<%= user.id %>"><%= user.first_name %> <%= user.last_name %></option>
                  <% }) %>
                </select>
              </div>

              <div class="form-group mb-3">
                <label>Day of week</label>
                <select name="day_label" class="form-control select2" data-toggle="select2">
                  <option <%= day_label == '' ? 'selected': '' %>  disabled value="">Select day of week</option>
                  <% DAY_CONSTANCE.forEach(function(day){ %>
                    <option <%= day_label == day ? 'selected' : '' %> value="<%= day %>"><%= day %> </option>
                  <% }) %>
                </select>
              </div>

              <div class="form-group mb-3">
                <label>Choose shift</label>
                <select name="shift_label" class="form-control select2" data-toggle="select2">
                  <option <%= shift_label == '' ? 'selected': '' %>  disabled value="">Select shift</option>
                  <% SHIFT_CONSTANCE.forEach(function(shift){ %>
                    <option <%= shift_label == shift ? 'selected' : '' %> value="<%= shift %>"><%= shift %> </option>
                  <% }) %>
                </select>
              </div>

              <div class="form-group mb-3">
                <button class="btn btn-success">Submit</button>
              </div>
            </form>
          </div> <!-- end col -->
        </div>
        <!-- end row-->
      </div> <!-- end card-body -->
    </div> <!-- end card -->
  </div><!-- end col -->
</div>

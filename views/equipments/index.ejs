<div class="row mt-2">
  <div class="col-xl-12">
    <div class="card">
      <div class="card-body">
        <%- include('./../shared/flash-message', { messages: messages }) %>
        <h4 class="header-title">Equipment management</h4>
        <a href="/equipments/new" class="btn btn-primary mb-2">Add an equipment</a>
        <div class="table-responsive-sm">
          <table class="table table-centered mb-0">
            <thead>
              <tr>
                <th>Name</th>
                <th>Quantity</th>
                <th>Description</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% equipments.forEach(function(equipment){ %>
              <tr>
                <td><%= equipment.name %></td>
                <td><%= equipment.quantity %></td>
                <td><%= equipment.description %></td>
                <td>
                  <a href="equipments/<%= equipment.id %>/edit" class="btn btn-info">Edit</a>
                  <a href="equipments/<%= equipment.id %>/delete" class="confirm-dialog btn btn-danger">Delete</a>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
          <%- include('./../shared/pagination', { resource, resourcePagy }) %>
        </div> <!-- end table-responsive-->

      </div> <!-- end card body-->
    </div> <!-- end card -->
  </div><!-- end col-->
</div>

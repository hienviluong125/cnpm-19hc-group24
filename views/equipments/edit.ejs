<div class="row mt-2">
  <div class="col-12">
    <div class="card">
      <div class="card-body">
        <h4 class="header-title">Edit user</h4>
        <%- include('./../shared/errors', { errors: errors}) %>
        <div class="row">
          <div class="col-lg-6">
            <form method="POST" action="/equipments/<%= id %>/edit">
              <div class="form-group mb-3">
                <label for="name">Name</label>
                <input name="name" type="text" id="name" class="form-control" value="<%= name %>">
              </div>

              <div class="form-group mb-3">
                <label for="description">Description</label>
                <textarea rows="5" name="description" type="text" id="description" class="form-control" ><%= description %></textarea>
              </div>

              <div class="form-group mb-3">
                <label for="quantity">Quantity</label>
                <input name="quantity" type="number" id="quantity" class="form-control" value="<%= quantity %>">
              </div>
              <div class="form-group mb-3">
                <button class="btn btn-success">Submit</button>
              </div>
            </form>
          </div> <!-- end col -->
        </div>
        <!-- end row-->
      </div> <!-- end card-body -->
    </div> <!-- end card -->
  </div><!-- end col -->
</div>

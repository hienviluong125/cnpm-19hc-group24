<div class="row mt-2">
  <div class="col-xl-12">
    <div class="card">
      <div class="card-body">
        <%- include('./../shared/flash-message', { messages: messages }) %>
        <h4 class="header-title">User Salary Management</h4>
        <a href="/salaries/new" class="btn btn-primary mb-2">Add salary record for an user</a>
        <div class="table-responsive-sm">
          <table class="table table-centered mb-0">
            <thead>
              <tr>
                <th>Amount</th>
                <th>Label</th>
                <th>User</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% salaries.forEach(function(salary){ %>
              <tr>
                <td><%= toCurrency(salary.amount) %></td>
                <td><%= salary.label %></td>
                <td><%= salary.user.first_name %> <%= salary.user.last_name %></td>
                <td>
                  <a href="salaries/<%= salary.id %>/edit" class="btn btn-info">Edit</a>
                  <a href="salaries/<%= salary.id %>/delete" class="confirm-dialog btn btn-danger">Delete</a>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
          <%- include('./../shared/pagination', { resource, resourcePagy }) %>
        </div> <!-- end table-responsive-->

      </div> <!-- end card body-->
    </div> <!-- end card -->
  </div><!-- end col-->
</div>
